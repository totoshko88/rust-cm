{
    "kiroAgent.configureMCP": "Enabled",

  // ... your other settings ...

  // 1. Define the new clean profile
  "terminal.integrated.profiles.linux": {
    "bash-clean": {
      "path": "bash",
      "args": ["--noprofile", "--norc"]
    },
    "zsh-clean": {
      "path": "zsh",
      "args": ["-f"] // Disables .zshrc and other rc files
    }
    // ... any other profiles you have ...
  },

  // 2. Set the clean profile as the default
  "terminal.integrated.defaultProfile.linux": "bash-clean" // Or "zsh-clean"
    
}